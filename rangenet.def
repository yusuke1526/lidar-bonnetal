Bootstrap: docker
From: nvidia/cuda:11.2.0-runtime-ubuntu18.04

%files
	requirements.txt

%post
	apt update && \
	DEBIAN_FRONTEND=noninteractive apt install -yqq  build-essential ninja-build \
		python3-dev python3-pip apt-utils curl git cmake unzip autoconf autogen \
		libtool mlocate zlib1g-dev python3-numpy python3-wheel wget \
		software-properties-common openjdk-8-jdk libpng-dev \
		libxft-dev ffmpeg python3-pyqt5.qtopengl python3-tk
	updatedb
	pip3 install -r requirements.txt
